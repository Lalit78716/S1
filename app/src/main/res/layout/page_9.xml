<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="170dp"
                android:layout_height="180dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:id="@+id/page_9_imgview"
                android:background="@drawable/stet_logo" />

            <TextView
                android:id="@+id/page_9_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center_horizontal"
                android:text="Sikkim Teacher Eligibility Test-2020"
                android:textSize="28dp"
                android:textStyle="bold">

            </TextView>

            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:background="@drawable/background"
                android:layout_gravity="center_horizontal">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    tools:text="ONLY REGISTERED CANDIDATE SIGN-IN"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="sans-serif-black"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:text="@string/application_no"
                        android:layout_width="245dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4"
                        android:layout_marginTop="20dp"
                        app:autoSizeMaxTextSize="20sp"
                        android:textSize="15dp"
                        android:textColorLink="@color/colorAccent"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_width="245dp"
                        android:layout_height="30dp"
                        android:inputType="number"
                        android:ems="10"
                        android:background="@drawable/box"
                        android:paddingLeft="10dp"
                        android:id="@+id/editText4"
                        android:hint="@string/enter_application_no"
                        android:layout_marginTop="5dp"
                        android:textSize="13sp"
                        android:importantForAutofill="no" />

                    <TextView
                        android:text="@string/password"
                        android:layout_width="245dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView5"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp" />

                    <EditText
                        android:layout_width="246dp"
                        android:layout_height="30dp"
                        android:inputType="textPassword"
                        android:ems="10"
                        android:id="@+id/editText6"
                        android:hint="@string/enter_password"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/box"
                        android:textSize="13sp"
                        android:autofillHints="" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="SECURITY PIN "
                            android:layout_width="234dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView6"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:layout_marginTop="15dp" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            app:srcCompat="@drawable/captcha1"
                            android:id="@+id/imageView5"
                            android:layout_weight="1"
                            android:layout_marginTop="15dp"
                            android:contentDescription="@string/todo" />
                    </LinearLayout>

                    <EditText
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:paddingLeft="10dp"
                        android:inputType="textPassword"
                        android:ems="10"
                        android:background="@drawable/box"
                        android:id="@+id/editText8"
                        android:hint="@string/enter_text_shown_in_image"
                        android:textSize="13sp"
                        android:autofillHints="" />

                </LinearLayout>

                <Button
                    android:text="@string/sign_in"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:id="@+id/button3"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:background="@drawable/button_shape" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp">

                    <Button
                        android:text="@string/forget_password"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:id="@+id/button6"
                        android:layout_weight="0"
                        android:textSize="13sp"
                        android:background="@drawable/button_shape"
                        style="@style/Widget.AppCompat.Button.Borderless" />

                    <Button
                        android:text="@string/forget_application_no"
                        android:layout_width="150dp"
                        android:layout_marginLeft="30dp"
                        android:layout_height="40dp"
                        android:textSize="13sp"
                        android:id="@+id/button7"
                        android:background="@drawable/button_shape"
                        style="@style/Widget.AppCompat.Button.Borderless" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</ScrollView>